		"@pnpm/types": "^3.0.0"
	},
	"devDependencies": {
		"@types/tape": "^4.2.33",
		"package-preview": "^1.0.6",
		"prettier": "^1.17.0",
		"rimraf": "^2.6.3",
		"tape": "^4.10.1",
		"ts-node": "^8.1.0",
		"typescript": "^3.4.4"
